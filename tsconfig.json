{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": [
		"node_modules",
		"amplify", // Exclude the source code directory for your backend (amplilfy/backend, etc.)
		".amplify", // Exclude the generated artifacts directory
		"./amplify/**/*", // A more specific exclusion
		"./.amplify/**/*",
		"amplify/**/*"
	],
	"type": "module"
}
